{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/profil-style.css">
{% endblock %}

{% block title %}Quizit | Profil{% endblock %}

{% block body %}

<main class="content">
      <section class="container">
        <div class="dashboard">
          <div class="user">
           <br>
            <img src="{{  asset('images/Profil.png')}}"/>
            <h3>Camille Honette</h3>
            <p>Profil Member</p>
          </div>
          <div class="links">
                <form action={{ path('app_profile_edit')}}> 
                    <button class="link">
                        <img src="{{  asset('images/edit-icon.png')}}" alt="" />
                        <h2>Edit</h2>
                    </button>
                </form>
                <form action={{ path('app_profile')}}> 
                    <button class="link">
                    <img src="{{  asset('images/quiz-icon.png')}}" alt="" />
                    <h2>Quiz</h2>
                    </button>
                </form>
                <form action={{ path('app_profile_score')}}> 
                    <button class="link">
                        <img src="{{  asset('images/game-icon.png')}}" alt="" />
                        <h2>Scores</h2>
                    </button>
                </form>
          </div>
        <form action={{ path('quiz_quiz')}}> 
          <div class="pro">
           <button>
            <h2>Back and go game.</h2>
            <img src="{{  asset('images/game.png')}}" alt="" />
            </button>
          </div>
        </form>
        </div>
       
        <div class="games">

          <div class="status">
            <h1>My Profil</h1>
            <input type="text" disabled />
          </div>
           <h2>Last game </h2>
          <div class="cards">
            <div class="card">
              <img src="https://images.pexels.com/photos/4620973/pexels-photo-4620973.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260" alt="" />
              <div class="card-info">
                <h2>Jeux de société</h2>
                <p>Amazing ! You are really smart</p>
                <div class="progress"></div>
              </div>
              <h2 class="percentage">30%</h2>
            </div>
            <div class="card">
              <img src="https://i.pinimg.com/originals/ee/6a/4f/ee6a4fcddf78fafdaada798cebd62cb4.jpg" alt="" />
              <div class="card-info">
                <h2>Séries TV:les simpson - partie 2</h2>
                <p>Really good! </p>
                <div class="progress"></div>
              </div>
              <h2 class="percentage">85%</h2>
            </div>
            <div class="card">
              <img src="https://live.staticflickr.com/1/1016855_8712acf0d2.jpg" alt="" />
              <div class="card-info">
                <h2>Séries TV:les simpson - partie 1</h2>
                <p>Good Job</p>
                <div class="progress"></div>
              </div>
              <h2 class="percentage">60%</h2>
            </div>
          </div> 


        </div>
      </section>
    </main>
    {# <div class="circle1"></div>
    <div class="circle2"></div> #}

{% endblock %}